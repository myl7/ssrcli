root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[*.py]
indent_size = 4
tab_width = 4
insert_final_newline = true

[{.eslintrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json,.condarc,*.yml,*.yaml}]
indent_size = 2
tab_width = 2
